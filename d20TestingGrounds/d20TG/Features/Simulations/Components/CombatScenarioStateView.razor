@using d20TG.Features.Scenarios.State

<div class="border rounded-xl p-2 flex flex-col items-center">
    <h4 class="text-2xl">@ScenarioState.Name</h4>
    <div class="flex flex-row items-center justify-center">
        <div class="flex flex-row flex-wrap gap-1">
            @foreach (var attacker in ScenarioState.AttackerBuildStates)
            {
                <AttackerView AttackerBuildState="attacker"/>
            }
        </div>
        <div class="grow-0 m-2">VS</div>
        <div class="flex flex-row flex-wrap gap-1">
            @foreach (var defender in ScenarioState.DefenderBuildStates)
            {
                <DefenderView DefenderBuildState="defender"/>
            }
        </div>
    </div>
</div>

@code {

    [Parameter, EditorRequired]
    public CombatScenarioState ScenarioState { get; set; }

}