@using d20TG.Features.ScenarioSetup.State
@using d20TG.Features.ScenarioSetup.ViewModels
<h3>Attackers</h3>

@if (State != null)
{
    <AttackerBuild State="@State[0]" OnAttackerBuildChangeCallback="HandleAttackerBuildChangeAsync" />
}

@code {
    [Parameter, EditorRequired]
    public AttackerBuildState[]? State { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<AttackerBuildState> OnAttackerBuildStateChangeCallback { get; set; }

    private async Task HandleAttackerBuildChangeAsync(AttackerBuildState attackerBuildState)
    {
        await OnAttackerBuildStateChangeCallback.InvokeAsync(attackerBuildState);
    }

}