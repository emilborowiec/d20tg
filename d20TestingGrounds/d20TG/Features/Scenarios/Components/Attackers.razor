@using d20TG.Features.Scenarios.State

@if (AttackerBuilds != null)
{
    <div class="flex flex-row">
        <AttackerBuildInput State="@AttackerBuilds[0]" OnAttackerBuildChangeCallback="HandleAttackerBuildChangeAsync" />
    </div>
}

@code {
    [Parameter, EditorRequired]
    public AttackerBuildState[]? AttackerBuilds { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<AttackerBuildState> OnAttackerBuildStateChangeCallback { get; set; }

    private async Task HandleAttackerBuildChangeAsync(AttackerBuildState attackerBuildState)
    {
        await OnAttackerBuildStateChangeCallback.InvokeAsync(attackerBuildState);
    }

}